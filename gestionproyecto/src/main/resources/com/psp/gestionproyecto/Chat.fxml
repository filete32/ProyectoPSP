<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.psp.gestionproyecto.controller.ChatController"
      prefWidth="400" prefHeight="300">

    <TextArea fx:id="chatTextArea" editable="false" prefHeight="250"/>
    <TextField fx:id="messageField" onAction="#sendMessage" promptText="Type a message"/>
    <Button text="Send" onAction="#sendMessage"/>
    <Button text="Close" onAction="#closeChat"/>
</VBox>


<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import com.sun.javafx.scene.control.IntegerField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.psp.gestionproyecto.controller.AddGroupController"
            prefHeight="200.0" prefWidth="400.0">

    <VBox spacing="10" alignment="CENTER">
        <Label text="Add Group" style="-fx-font-size: 18px;" />
        <TextField fx:id="groupIdInput" promptText="Id"/>
        <TextField fx:id="groupNameInput" promptText="Group Name" />
        <TextField fx:id="groupDescriptionInput" promptText="Description" />

        <HBox spacing="10" alignment="CENTER">
            <Button text="Add" onAction="#handleAddGroup" />
            <Button text="Cancel" onAction="#handleCancelGroup" />
        </HBox>
    </VBox>

</AnchorPane>


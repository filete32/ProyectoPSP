<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.psp.gestionproyecto.controller.AddUserController"
            prefHeight="200.0" prefWidth="400.0">

    <VBox spacing="10" alignment="CENTER">
        <Label text="Add User" style="-fx-font-size: 18px;" />
        <TextField fx:id="usernameInput" promptText="Username" />
        <TextField fx:id="passwordInput" promptText="Password" />
        <TextField fx:id="emailInput" promptText="Email" />
        <TextField fx:id="groupIdInput" promptText="Group ID" />

        <HBox spacing="10" alignment="CENTER">
            <Button text="Add" onAction="#handleAddUser" />
            <Button text="Cancel" onAction="#handleCancelUser" />
        </HBox>
    </VBox>

</AnchorPane>
